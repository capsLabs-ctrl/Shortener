    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ShortUrl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShortUrl.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="ShortUrl.OriginalUrl" class="control-label"></label>
                <input asp-for="ShortUrl.OriginalUrl" class="form-control" />
