            </div>
            <div class="form-group">
                <label asp-for="ShortUrl.ShortCode" class="control-label"></label>
                <input asp-for="ShortUrl.ShortCode" class="form-control" maxlength="8" />
                <span asp-validation-for="ShortUrl.ShortCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortUrl.CreatedAt" class="control-label"></label>
                <input asp-for="ShortUrl.CreatedAt" class="form-control" />
                <span asp-validation-for="ShortUrl.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortUrl.ClickCount" class="control-label"></label>
                <input asp-for="ShortUrl.ClickCount" class="form-control" />
                <span asp-validation-for="ShortUrl.ClickCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

